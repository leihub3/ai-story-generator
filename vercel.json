{
  "version": 2,
  "buildCommand": "npm install && cd server && npm install && cd .. && cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install && cd server && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/stories/(.*)",
      "destination": "/api/stories"
    },
    {
      "source": "/api/translate/(.*)",
      "destination": "/api/translate"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}

